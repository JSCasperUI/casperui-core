{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@casperui/core/*": ["src/*"]
    },
    "lib": [
      "ESNext",
      "es2021.weakref",
      "dom"
    ]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules","lib"]
}
